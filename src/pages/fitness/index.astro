---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/global/Nav';
import FitnessCharts from '../../components/FitnessCharts';
import { getRecentBlogPosts } from '../../utils/blog';

import runsData from '../../data/runs.json';
import liftsData from '../../data/lifts.json';

const recentPosts = await getRecentBlogPosts();
---

<Layout
  title='Fitness - Ronniel Gandhe'
  description='Running and strength training progress tracking'
  canonical='https://ronnielgandhe.com/fitness'
>
  <Nav currentPath="/fitness" recentPosts={recentPosts} />
  
  <main class="min-h-screen bg-bg pt-12">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <!-- Header -->
      <div class="mb-12">
        <h1 class="text-3xl font-bold text-ink mb-4">Fitness</h1>
        <p class="text-ink-mute">
          Tracking running and strength training progress with data-driven insights.
        </p>
      </div>

      <!-- Charts Component -->
      <FitnessCharts runs={runsData} lifts={liftsData} client:load />
    </div>
  </main>
</Layout>