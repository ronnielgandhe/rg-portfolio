---
export const prerender = false;
import { getCollection } from 'astro:content';
import { getImage } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import { getRecentBlogPosts } from '../../utils/blog';
import { getFixedBackgroundKey, getOptimizedBackgrounds } from '../../utils/backgrounds';
import Nav from '../../components/global/Nav';
import MobileDock from '../../components/global/MobileDock';
import DesktopDock from '../../components/global/DesktopDock';
import Pill from '../../components/Pill.astro';

// Fetch all case studies from content collection
const allCaseStudies = await getCollection('caseStudies');

// Sort by published date (most recent first)
const sortedCaseStudies = allCaseStudies.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

// Get optimized backgrounds
const backgroundMap = await getOptimizedBackgrounds(getImage);
const currentBg = getFixedBackgroundKey();

// Fetch recent blog posts for navigation
const recentPosts = await getRecentBlogPosts();

function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout
  title='Case Studies - Ronniel Gandhe'
  description='Business case studies exploring technical decisions at Netflix, Uber, and Spotify'
  canonical='https://ronnielgandhe.com/case-studies'
>
  <div class="relative w-screen min-h-screen overflow-x-hidden">
    <!-- Background -->
    <div
      class="fixed inset-0 bg-cover bg-center"
      style={`background-image: url(${backgroundMap[currentBg]})`}
    />

    <!-- Navbar -->
    <div class="relative z-10">
      <Nav client:load currentPath="/case-studies" recentPosts={recentPosts} />
    </div>

    <!-- Main Content -->
    <div class="relative z-0 pt-12 pb-32 px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-12">
          <div class="glass rounded-lg overflow-hidden shadow-2xl">
            <div class="bg-gray-800 h-6 flex items-center space-x-2 px-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
              <span class="text-sm text-gray-300 flex-grow text-center font-semibold">
                case-studies/ — business analysis
              </span>
            </div>
            
            <div class="p-8">
              <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4 font-mono">
                Case Studies
              </h1>
              <p class="text-gray-300 text-lg font-mono leading-relaxed">
                Deep dives into technical and organizational decisions at industry-leading companies.
                <br />
                Written from a business + technology perspective.
              </p>
            </div>
          </div>
        </div>

        <!-- Case Studies Grid -->
        <div class="grid gap-6">
          {sortedCaseStudies.map((caseStudy) => (
            <a
              href={`/case-studies/${caseStudy.data.slug || caseStudy.id.replace('.md', '')}`}
              class="glass rounded-lg overflow-hidden shadow-2xl hover:shadow-3xl transition-all duration-300 group"
            >
              <div class="bg-gray-800 h-6 flex items-center space-x-2 px-4">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                <span class="text-sm text-gray-300 flex-grow text-center font-semibold">
                  {caseStudy.data.slug || caseStudy.id.replace('.md', '')}.case
                </span>
              </div>

              <div class="p-6 lg:p-8">
                <!-- Company Badge -->
                <div class="mb-4">
                  <Pill text={caseStudy.data.company} variant="accent" />
                </div>

                <!-- Title -->
                <h2 class="text-2xl lg:text-3xl font-bold text-white mb-3 font-mono group-hover:text-green-400 transition-colors">
                  {caseStudy.data.title}
                </h2>

                <!-- Metadata -->
                <div class="flex flex-wrap items-center gap-3 text-sm text-gray-400 font-mono mb-4">
                  <span>{formatDate(caseStudy.data.publishedAt)}</span>
                  {caseStudy.data.readingTime && (
                    <>
                      <span class="text-gray-600">•</span>
                      <span>{caseStudy.data.readingTime} min read</span>
                    </>
                  )}
                </div>

                <!-- Summary -->
                <p class="text-gray-300 mb-4 leading-relaxed">
                  {caseStudy.data.summary}
                </p>

                <!-- Tags -->
                {caseStudy.data.tags && caseStudy.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {caseStudy.data.tags.map((tag: string) => (
                      <span class="text-xs text-gray-400 border border-gray-700 px-2 py-1 rounded">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Read More Indicator -->
                <div class="mt-4 flex items-center text-green-400 font-mono text-sm group-hover:translate-x-2 transition-transform">
                  <span>Read case study</span>
                  <span class="ml-2">→</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Docks -->
    <MobileDock client:load />
    <DesktopDock client:load />
  </div>
</Layout>
