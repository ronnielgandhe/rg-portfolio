---
export const prerender = false;
import { getImage } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import UniversalLayout from '../../layouts/UniversalLayout';
import { FaRegFolderClosed } from 'react-icons/fa6';
import { getRecentBlogPosts } from '../../utils/blog';
import { getFixedBackgroundKey, getOptimizedBackgrounds } from '../../utils/backgrounds';

const recentPosts = await getRecentBlogPosts();
const backgroundMap = await getOptimizedBackgrounds(getImage);
---

<Layout
  title='Contact - Ronniel Gandhe'
  description='Get in touch with Ronniel Gandhe - software engineer'
  canonical='https://ronnielgandhe.com/contact'
>
  <UniversalLayout
    client:load
    currentPath="/contact"
    initialBg={getFixedBackgroundKey()}
    backgroundMap={backgroundMap}
    recentPosts={recentPosts}
  >
    <div class="flex items-center justify-center min-h-[calc(100vh-1.5rem)] px-4 py-12">
      <div class="max-w-5xl w-full">
        <!-- Single Terminal Window -->
        <div class="glass rounded-lg overflow-hidden shadow-2xl">
          <!-- Terminal Title Bar -->
          <div class="bg-gray-800 h-6 flex items-center space-x-2 px-4">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="text-sm text-gray-300 flex-grow text-center font-semibold flex items-center justify-center gap-2">
              <FaRegFolderClosed size={14} className="text-gray-300" />
              contact ‚Äî ronnielgandhe.com
            </span>
          </div>

          <!-- Terminal Content -->
          <div class="p-8 lg:p-12 text-gray-100 font-mono text-sm">
            <!-- Header -->
            <div class="mb-8">
              <h1 class="text-base font-bold text-white mb-3">
                <span class="text-green-400">$</span> contact.txt
              </h1>
              <p class="text-gray-300">
                Interested in collaborating on systematic trading strategies or infrastructure projects? Let's connect.
              </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12">
              <!-- Left Column: Get in Touch -->
              <div class="space-y-6">
                <div class="mb-6">
                  <h2 class="text-base font-bold text-white mb-4">
                    <span class="text-green-400">$</span> ls get-in-touch/
                  </h2>
                </div>

                <div class="space-y-4">
                  <!-- Email -->
                  <a 
                    href="mailto:ronnielgandhe@gmail.com"
                    class="block hover:text-green-400 transition-colors"
                  >
                    <div class="text-white font-semibold">üìß Email</div>
                    <div class="text-gray-300 ml-6">ronnielgandhe@gmail.com</div>
                  </a>

                  <!-- GitHub -->
                  <a 
                    href="https://github.com/ronnielgandhe"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block hover:text-green-400 transition-colors"
                  >
                    <div class="text-white font-semibold">üíª GitHub</div>
                    <div class="text-gray-300 ml-6">@ronnielgandhe</div>
                  </a>

                  <!-- Location -->
                  <div>
                    <div class="text-white font-semibold">üìç Location</div>
                    <div class="text-gray-300 ml-6">Waterloo, ON, Canada</div>
                  </div>

                  <!-- Resume -->
                  <a 
                    href="/Ronniel_Gandhe_Resume.pdf"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="block hover:text-green-400 transition-colors"
                  >
                    <div class="text-white font-semibold">üìÑ R√©sum√©</div>
                    <div class="text-gray-300 ml-6">Download PDF</div>
                  </a>
                </div>

                <!-- Current Focus -->
                <div class="mt-8 pt-6 border-t border-gray-700/50">
                  <h3 class="text-white font-semibold mb-3">Current Focus</h3>
                  <p class="text-gray-300 leading-relaxed">
                    Building systematic trading strategies and scalable infrastructure. 
                    Training for distance running, lifting three days a week, and spending 
                    weekends with a camera. I like shipping small polished projects, learning 
                    in public, and talking about quant finance, cloud architecture, and 
                    developer tooling.
                  </p>
                  <p class="text-gray-300 leading-relaxed mt-4">
                    Outside of code I am into long runs, strength training, and street and landscape photography.
                  </p>
                </div>
              </div>

              <!-- Right Column: What I'm Working On -->
              <div class="space-y-6">
                <div class="mb-6">
                  <h2 class="text-base font-bold text-white mb-4">
                    <span class="text-green-400">$</span> working-on.txt
                  </h2>
                </div>

                <div class="space-y-6">
                  <div>
                    <h3 class="text-white font-semibold mb-2">QuantTerminal</h3>
                    <p class="text-gray-300 leading-relaxed">
                      A terminal-style trading dashboard for systematic strategy development. 
                      Python + React + FastAPI stack with real-time market data integration.
                    </p>
                  </div>
                  
                  <div>
                    <h3 class="text-white font-semibold mb-2">Infrastructure Optimization</h3>
                    <p class="text-gray-300 leading-relaxed">
                      Building resilient, low-latency systems on AWS. Focus on Lambda, 
                      API Gateway, and event-driven architectures for financial applications.
                    </p>
                  </div>
                  
                  <div>
                    <h3 class="text-white font-semibold mb-2">Trading Research</h3>
                    <p class="text-gray-300 leading-relaxed">
                      Researching factor models, risk management systems, and portfolio 
                      optimization techniques. Always learning from the latest academic papers.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </UniversalLayout>
</Layout>