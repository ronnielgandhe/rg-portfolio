---
export interface Props {
  spacing?: 'default' | 'large' | 'small';
}

const { spacing = 'default' } = Astro.props;

const spacingMap = {
  small: '2em',
  default: '3em',
  large: '4em',
};
---

<hr
  class="divider"
  style={`margin-top: ${spacingMap[spacing]}; margin-bottom: ${spacingMap[spacing]}`}
/>

<style>
  .divider {
    border: none;
    border-top: 1px solid var(--divider);
    opacity: 0.6;
  }

  @media (max-width: 640px) {
    .divider {
      margin-top: 2em;
      margin-bottom: 2em;
    }
  }
</style>
