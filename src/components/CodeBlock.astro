---
export interface Props {
  title?: string;
  lang?: string;
  showLineNumbers?: boolean;
}

const { title, lang, showLineNumbers = false } = Astro.props;
---

<div class="code-block">
  {title && (
    <div class="code-title">
      <div class="code-title-text">
        {lang && <span class="code-lang">{lang}</span>}
        {title && <span>{title}</span>}
      </div>
      <button class="copy-button" data-code-copy>
        Copy
      </button>
    </div>
  )}
  {!title && (
    <button class="copy-button copy-button-absolute" data-code-copy>
      Copy
    </button>
  )}
  <slot />
</div>

<style>
  .copy-button-absolute {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    z-index: 10;
  }

  .code-lang {
    text-transform: uppercase;
    font-weight: 600;
    font-size: 0.75rem;
    opacity: 0.7;
  }
</style>
