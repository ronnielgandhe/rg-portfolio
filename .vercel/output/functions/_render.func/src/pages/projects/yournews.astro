---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/global/Nav';

const project = await getEntry('projects', 'yournews');
if (!project) throw new Error('Project not found');

const { Content } = await project.render();
---

<Layout
  title={`${project.data.title} - Ronniel Gandhe`}
  description={project.data.summary}
  canonical={`https://ronnielgandhe.com/projects/${project.data.slug}`}
>
  <Nav currentPath="/projects" />
  
  <main class="min-h-screen bg-bg pt-12">
    <div class="max-w-4xl mx-auto px-4 py-12">
      <!-- Back Navigation -->
      <div class="mb-8">
        <a 
          href="/projects" 
          class="text-ink-mute hover:text-accent transition-apple text-sm"
        >
          ← Back to Projects
        </a>
      </div>

      <!-- Project Header -->
      <div class="mb-12">
        <div class="flex items-start justify-between mb-6">
          <div>
            <h1 class="text-3xl font-bold text-ink mb-2">{project.data.title}</h1>
            <p class="text-ink-mute text-lg leading-relaxed">{project.data.summary}</p>
          </div>
          <span class="text-ink-mute text-sm">{project.data.year}</span>
        </div>
        
        <!-- Tech Stack -->
        <div class="flex flex-wrap gap-2 mb-6">
          {project.data.tech.map((tech) => (
            <span class="px-3 py-1 bg-accent/10 text-accent border border-accent/20 rounded-lg text-sm">
              {tech}
            </span>
          ))}
        </div>

        <!-- Links -->
        <div class="flex gap-4">
          {project.data.repoUrl && (
            <a 
              href={project.data.repoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-bg-soft border border-border rounded-lg text-ink hover:border-accent/30 transition-apple"
            >
              GitHub ↗
            </a>
          )}
          {project.data.liveUrl && (
            <a 
              href={project.data.liveUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-accent text-white rounded-lg hover:bg-accent-dim transition-apple"
            >
              Live Demo ↗
            </a>
          )}
        </div>
      </div>

      <!-- Project Content -->
      <div class="prose prose-invert prose-lg max-w-none">
        <div class="text-ink-mute leading-relaxed [&>h1]:text-ink [&>h2]:text-ink [&>h3]:text-ink [&>h4]:text-ink [&>h5]:text-ink [&>h6]:text-ink [&>strong]:text-ink [&>code]:text-accent [&>code]:bg-accent/10 [&>code]:px-1 [&>code]:py-0.5 [&>code]:rounded [&>pre]:bg-bg-soft [&>pre]:border [&>pre]:border-border">
          <Content />
        </div>
      </div>

      <!-- Highlights -->
      {project.data.highlights && (
        <div class="mt-12 p-6 bg-bg-soft border border-border rounded-xl">
          <h2 class="text-xl font-semibold text-ink mb-4">Key Highlights</h2>
          <ul class="space-y-2">
            {project.data.highlights.map((highlight) => (
              <li class="flex items-start gap-2 text-ink-mute">
                <span class="text-accent mt-1.5">•</span>
                <span>{highlight}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </main>
</Layout>